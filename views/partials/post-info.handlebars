<article class="post">
  <div class="title">
    <a href="/" target="_blank">{{title}}</a><br>
    <textarea>({{post_url}})</textarea>
  </div>
  <div class="meta">
    {{vote_count}} like(s) since {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
  </div>
</article>